@page
@model StocksModel
@{
    ViewData["Title"] = "Snickky";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Snickky</h1>
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <input asp-for="Stock" />
                    <div asp-validation-summary="ModelOnly"></div>
                    <span asp-validation-for="Stock"></span>
                    <div class="form-group"><input class="btn btn-primary" type="submit" value="Update" asp-page-handler="Update" /></div>
                </form>
            </div>
            <div class="col-md-6">
                <h4>Vending Machine</h4>
                <p>Current Stock: @Model.CurrentStock</p>
            </div>
        </div>
    </div>
</div>