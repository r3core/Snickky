@page
@model IndexModel
@{
    ViewData["Title"] = "Snickky";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Snickky</h1>
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div class="form-group">
                        <label>Select Coin</label>
                        <select asp-for="Coin.Value" asp-items="@Model.Coins">
                        </select>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary" type="submit" asp-page-handler="insert">
                            Insert Coin
                        </button>
                    </div>
                    <div class="form-group"><input class="btn btn-primary" type="submit" value="Cancel" disabled="@Model.MachineInformation.IsIdle" asp-page-handler="Cancel" /></div>
                    <div class="form-group"><input class="btn btn-primary" type="submit" value="Reset" asp-page-handler="Reset" /></div>
                    <div class="form-group"><input class="btn btn-primary" type="submit" value="Dispense" disabled="@Model.MachineInformation.IsIdle" asp-page-handler="Dispense" /></div>
                </form>
            </div>
            <div class="col-md-6">
                <h4>Vending Machine</h4>
                <p>Loaded value: @Model.MachineInformation.LoadedValue</p>
                <p>Change Tray: @Model.MachineInformation.ChangeTray</p>
                <p>Snickers in machine: @Model.MachineInformation.SnickersInMachine</p>
                <p>Current Status: @Model.MachineInformation.CurrentStatus</p>
            </div>
        </div>
    </div>
</div>
